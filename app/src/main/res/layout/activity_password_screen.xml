<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/background"
    tools:context="com.example.janeeta.poweroptimizationsystem.LoginScreen">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="OLD PASSWORD:"
        android:id="@+id/userText"
        android:layout_marginTop="69dp"
        android:textColor="#ffffff"
        android:textSize="18dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"

        android:background="#fbf8f8"
        android:id="@+id/editText3"
        android:textColor="#000"
        android:layout_alignTop="@+id/userText"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="NEW PASSWORD:"
        android:id="@+id/textView6"
        android:layout_marginTop="42dp"
        android:textColor="#ffffff"
        android:textSize="18dp"
        android:layout_below="@+id/userText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/editText4"
        android:background="#fbf8f8"
        android:layout_alignTop="@+id/textView6"
        android:textColor="#000"
        android:layout_alignLeft="@+id/editText3"
        android:layout_alignStart="@+id/editText3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="RE-ENTER NEW PASSWORD:"
        android:id="@+id/textView7"
        android:textColor="#ffffff"
        android:textSize="18dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/userText"
        android:layout_alignEnd="@+id/userText" />

    <EditText
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/editText5"
        android:textColor="#000"
        android:background="#fbf8f8"
        android:layout_alignTop="@+id/textView7"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CONFIRM"
        android:id="@+id/button5"
        android:textColorHighlight="#8d5f5f"
        android:theme="@style/Base.ThemeOverlay.AppCompat.Dark"
        android:textSize="22dp"
        android:textColor="#ffffff"
        android:onClick="confirmClicked"
        android:layout_marginBottom="110dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CANCEL"
        android:id="@+id/button2"
        android:textColorHighlight="#8d5f5f"
        android:theme="@style/Base.ThemeOverlay.AppCompat.Dark"
        android:textSize="22dp"
        android:textColor="#ffffff"
        android:onClick="cancelClicked"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOGOUT"
        android:id="@+id/button3"
        android:textColorHighlight="#8d5f5f"
        android:theme="@style/Base.ThemeOverlay.AppCompat.Dark"
        android:textSize="22dp"
        android:textColor="#ffffff"
        android:layout_alignTop="@+id/button2"
        android:layout_alignRight="@+id/editText5"
        android:layout_alignEnd="@+id/editText5"
        android:onClick="logoutClicked"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CHANGE PASSWORD"
        android:id="@+id/button4"
        android:textColorHighlight="#8d5f5f"
        android:theme="@style/Base.ThemeOverlay.AppCompat.Dark"
        android:textSize="25dp"
        android:textColor="#ffffff"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        />


</RelativeLayout>

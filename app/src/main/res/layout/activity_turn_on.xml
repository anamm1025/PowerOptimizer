<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/background"
    tools:context="com.example.janeeta.poweroptimizationsystem.LoginScreen">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DEVICE LIST"
        android:id="@+id/textView3"
        android:textSize="23dp"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:layout_marginBottom="61dp"
        android:layout_above="@+id/tableLayout"
        android:layout_centerHorizontal="true" />

    <TableLayout android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:stretchColumns="*"
        android:background="#ffffff"
        android:orientation="vertical"
        android:id="@+id/tableLayout"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <TableRow android:layout_margin="1dp">
            <TextView android:text="AC" android:background="#000000"
                android:layout_margin="1dp"
                android:textColor="#ffffff"
                android:textSize="18dp"
                android:layout_height="40dp"
                android:layout_width="20dp" />
            <TextView
                android:background="#000000"
                android:layout_margin="1dp" android:textColor="#edd7d7"
                android:textSize="20dp"
                android:layout_height="40dp"
                android:layout_width="100dp"
                android:text="      TURN ON"
                android:textAlignment="inherit"
                android:onClick="turnonClicked"
                android:id="@+id/on1" />
        </TableRow>

        <TableRow android:layout_margin="1dp">
            <TextView android:text="PROJECTOR" android:background="#000000"
                android:layout_margin="1dp"
                android:textColor="#ffffff"
                android:textSize="18dp"
                android:layout_height="40dp" />
            <TextView
                android:background="#000000"
                android:layout_margin="1dp" android:textColor="#edd7d7"
                android:textSize="20dp"
                android:layout_height="40dp"
                android:layout_width="40dp"
                android:text="      TURN ON"
                android:textAlignment="inherit"
                android:onClick="turnonClicked"/>
        </TableRow>

        <TableRow android:layout_margin="1dp">
            <TextView android:text="LIGHT 1" android:background="#000000"
                android:layout_margin="1dp"
                android:textColor="#ffffff"
                android:textSize="18dp"
                android:layout_height="40dp" />
            <TextView android:text="      TURN ON" android:background="#000000"
                android:layout_margin="1dp" android:textColor="#edd7d7"
                android:textSize="20dp"
                android:layout_height="40dp"
                android:layout_width="40dp"
                android:textAlignment="inherit"
                android:onClick="turnonClicked"/>
        </TableRow>

        <TableRow android:layout_margin="1dp">
            <TextView android:text="LIGHT 2" android:background="#000000"
                android:layout_margin="1dp"
                android:textColor="#ffffff"
                android:textSize="18dp"
                android:layout_height="40dp" />
            <TextView android:text="      TURN ON" android:background="#000000"
                android:layout_margin="1dp" android:textColor="#edd7d7"
                android:textSize="20dp"
                android:layout_height="40dp"
                android:layout_width="40dp"
                android:textAlignment="inherit"
                android:onClick="turnonClicked"/>
        </TableRow>
    </TableLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CANCEL"
        android:id="@+id/button13"
        android:textColorHighlight="#8d5f5f"
        android:theme="@style/Base.ThemeOverlay.AppCompat.Dark"
        android:textSize="22dp"
        android:textColor="#ffffff"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="cancelClicked"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOGOUT"
        android:id="@+id/button14"
        android:textColorHighlight="#8d5f5f"
        android:theme="@style/Base.ThemeOverlay.AppCompat.Dark"
        android:textSize="22dp"
        android:textColor="#ffffff"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="logoutClicked"/>

</RelativeLayout>

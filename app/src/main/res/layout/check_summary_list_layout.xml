<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <TextView
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/deviceName"
        android:layout_gravity="right"
        android:height="50dp"
        android:textAlignment="center"
        android:textSize="15dp"
        android:textColor="#ffffff"
        android:text="LIGHT 1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="65dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/deviceStatus"
        android:layout_gravity="right"
        android:height="50dp"
        android:textAlignment="center"
        android:textSize="15dp"
        android:textColor="#ffffff"
        android:text="ON"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/deviceName"
        android:layout_toEndOf="@+id/deviceName" />

    <TextView
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/deviceAutomation"
        android:layout_gravity="right"
        android:height="50dp"
        android:textAlignment="center"
        android:textSize="15dp"
        android:textColor="#ffffff"
        android:text="ON"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/deviceStatus"
        android:layout_toEndOf="@+id/deviceStatus" />

    <TextView
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/deviceAttached"
        android:layout_gravity="right"
        android:height="50dp"
        android:textAlignment="center"
        android:textSize="15dp"
        android:textColor="#ffffff"
        android:text="YES"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/deviceAutomation"
        android:layout_toEndOf="@+id/deviceAutomation" />

    <TextView
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/timerStatus"
        android:layout_gravity="right"
        android:height="50dp"
        android:textAlignment="center"
        android:textSize="15dp"
        android:textColor="#ffffff"
        android:text="YES"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/deviceAttached"
        android:layout_toEndOf="@+id/deviceAttached" />


</RelativeLayout>
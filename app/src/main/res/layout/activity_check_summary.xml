<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/background"
    tools:context=".com.example.janeeta.poweroptimizer.roomScreen">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/summaryHeadingTextView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:text="SUMMARY OF DEVICES:" />


    <ListView
        android:id="@+id/summaryList"
        android:textSize="23dp"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:layout_height="72dp"
        android:layout_width="match_parent"
        android:layout_below="@+id/textView15"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/logoutButton">


    </ListView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOGOUT"
        android:id="@+id/logoutButton"
        android:textColorHighlight="#8d5f5f"
        android:textSize="12dp"
        android:textColor="#030303"
        android:onClick="logoutClicked"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/summaryList"
        android:layout_alignStart="@+id/summaryList"
        android:background="#d6d7d7"
        android:textStyle="bold" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BACK"
        android:id="@+id/backButton"
        android:textColorHighlight="#8d5f5f"
        android:textSize="12dp"
        android:textColor="#030303"
        android:onClick="backClicked"
        android:layout_alignTop="@+id/logoutButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="#d6d7d7"
        android:textStyle="bold" />

    <TextView
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Name"
        android:id="@+id/textView15"
        android:layout_below="@+id/summaryHeadingTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="49dp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:textAlignment="center"
        android:textSize="15dp" />

    <TextView
        android:layout_width="65dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Status"
        android:id="@+id/textView16"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:textAlignment="center"
        android:textSize="15dp"
        android:layout_alignTop="@+id/textView15"
        android:layout_toRightOf="@+id/textView15"
        android:layout_toEndOf="@+id/textView15" />

    <TextView
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Automation"
        android:id="@+id/textView17"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:textAlignment="center"
        android:textSize="14dp"
        android:layout_above="@+id/summaryList"
        android:layout_toRightOf="@+id/textView16"
        android:layout_toEndOf="@+id/textView16" />

    <TextView
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Attached"
        android:id="@+id/textView18"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:textAlignment="center"
        android:textSize="15dp"
        android:layout_above="@+id/summaryList"
        android:layout_toRightOf="@+id/textView17"
        android:layout_toEndOf="@+id/textView17" />

    <TextView
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Timer"
        android:id="@+id/textView19"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:textAlignment="center"
        android:textSize="14dp"
        android:layout_above="@+id/summaryList"
        android:layout_toRightOf="@+id/textView18"
        android:layout_toEndOf="@+id/textView18" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/checkText"
        android:layout_below="@+id/summaryHeadingTextView"
        android:layout_toLeftOf="@+id/textView19"
        android:layout_toStartOf="@+id/textView19"
        android:textStyle="bold"
        android:textSize="12dp"
        android:textAlignment="center"
        android:textColor="#ffffff" />

</RelativeLayout>

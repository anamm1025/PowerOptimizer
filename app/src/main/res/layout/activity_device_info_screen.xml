<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/background"
    tools:context="com.example.janeeta.poweroptimizer.deviceInfoScreen">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/deviceName"
        android:textColor="#ffffff"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:text="DEVICE NAME: "
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/statusText"
        android:textColor="#ffffff"
        android:textSize="14dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginTop="40dp"
        android:text="Status: ON"
        android:layout_below="@+id/textView32"
        android:layout_toStartOf="@+id/textView32"
        android:layout_toLeftOf="@+id/textView32"
        android:layout_marginRight="40dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOGOUT"
        android:id="@+id/logoutButton"
        android:textColorHighlight="#8d5f5f"
        android:textSize="12dp"
        android:textColor="#030303"
        android:onClick="logoutClicked"
        android:background="#d6d7d7"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BACK"
        android:id="@+id/backButton"
        android:textColorHighlight="#8d5f5f"
        android:textSize="12dp"
        android:textColor="#030303"
        android:onClick="backClicked"
        android:background="#d6d7d7"
        android:textStyle="bold"
        android:layout_alignTop="@+id/logoutButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TURN ON"
        android:id="@+id/controlButton"
        android:textColorHighlight="#8d5f5f"
        android:textSize="12dp"
        android:textColor="#ffffff"
        android:onClick="controlButtonClicked"
        android:background="#3b6a7b"
        android:textStyle="bold"
        android:layout_above="@+id/textView21"
        android:layout_alignLeft="@+id/setTimerButton"
        android:layout_alignStart="@+id/setTimerButton"
        android:layout_alignRight="@+id/setTimerButton"
        android:layout_alignEnd="@+id/setTimerButton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/textView20"
        android:layout_below="@+id/statusText"
        android:layout_toRightOf="@+id/logoutButton"
        android:layout_toEndOf="@+id/logoutButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SET TIMER"
        android:id="@+id/timerButton"
        android:textColorHighlight="#8d5f5f"
        android:textSize="12dp"
        android:textColor="#ffffff"
        android:background="#3b6a7b"
        android:onClick="timerButtonClicked"
        android:nestedScrollingEnabled="false"
        android:textStyle="bold"
        android:visibility="invisible"
        android:layout_above="@+id/autoButton"
        android:layout_alignLeft="@+id/textView31"
        android:layout_alignStart="@+id/textView31" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/textView21"
        android:layout_alignLeft="@+id/textView20"
        android:layout_alignStart="@+id/textView20"
        android:layout_below="@+id/textView20" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TURN AUTOMATION ON"
        android:id="@+id/autoButton"
        android:textColorHighlight="#8d5f5f"
        android:textSize="12dp"
        android:textColor="#ffffff"
        android:background="#3b6a7b"
        android:onClick="autoButtonClicked"
        android:nestedScrollingEnabled="false"
        android:textStyle="bold"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/time"
        android:layout_alignRight="@+id/textView32"
        android:layout_alignEnd="@+id/textView32" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/attachedText"
        android:textColor="#ffffff"
        android:textSize="14dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:text="Attached: YES"
        android:layout_marginTop="43dp"
        android:layout_below="@+id/autoButton"
        android:layout_alignRight="@+id/timerStatusText"
        android:layout_alignEnd="@+id/timerStatusText" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ADD DEVICE"
        android:id="@+id/attachedButton"
        android:textColorHighlight="#8d5f5f"
        android:textSize="12dp"
        android:textColor="#ffffff"
        android:background="#3b6a7b"
        android:onClick="attachedButtonClicked"
        android:nestedScrollingEnabled="false"
        android:textStyle="bold"
        android:layout_alignBottom="@+id/textView22"
        android:layout_alignLeft="@+id/autoButton"
        android:layout_alignStart="@+id/autoButton"
        android:layout_alignRight="@+id/autoButton"
        android:layout_alignEnd="@+id/autoButton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/textView22"
        android:layout_below="@+id/attachedText"
        android:layout_toRightOf="@+id/attachedText"
        android:layout_toEndOf="@+id/attachedText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/textView31"
        android:layout_below="@+id/deviceName"
        android:layout_toRightOf="@+id/deviceName"
        android:layout_toEndOf="@+id/deviceName"
        android:visibility="invisible" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/timerStatusText"
        android:textColor="#ffffff"
        android:textSize="14dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:text="Timer: OFF"
        android:layout_alignTop="@+id/timerButton"
        android:layout_toLeftOf="@+id/textView32"
        android:layout_toStartOf="@+id/textView32"
        android:layout_marginRight="40dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text huiuiuiu"
        android:id="@+id/textView32"
        android:layout_below="@+id/textView31"
        android:layout_alignRight="@+id/timerButton"
        android:layout_alignEnd="@+id/timerButton"
        android:layout_marginRight="20dp"
        android:visibility="invisible" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SET TIMER"
        android:id="@+id/setTimerButton"
        android:textColorHighlight="#8d5f5f"
        android:textSize="12dp"
        android:textColor="#ffffff"
        android:background="#3b6a7b"
        android:onClick="timerButtonClicked"
        android:nestedScrollingEnabled="false"
        android:textStyle="bold"
        android:layout_below="@+id/textView21"
        android:layout_alignLeft="@+id/autoButton"
        android:layout_alignStart="@+id/autoButton"
        android:layout_alignRight="@+id/autoButton"
        android:layout_alignEnd="@+id/autoButton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/time"
        android:layout_below="@+id/setTimerButton"
        android:layout_marginLeft="69dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/automationText"
        android:textColor="#ffffff"
        android:textSize="14dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:text="Automation: OFF"
        android:layout_alignBottom="@+id/autoButton"
        android:layout_alignRight="@+id/attachedText"
        android:layout_alignEnd="@+id/attachedText" />

</RelativeLayout>
